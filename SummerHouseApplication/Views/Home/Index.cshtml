@model SummerHouseApplication.Models.HomeViewModels.HomeIndexViewModel

<div class="row">
    <ul class="collapsible" data-collapsible="accordion">
        @foreach (var house in Model.SummerHouses)
        {
            <li>
                <div class="collapsible-header">
                    <img src="~/images/Icon_Cabin.png" class="houses-collapsible-header-image" />
                    <span class="houses-collapsible-header-text">@house.Name</span>
                    <div class="right">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" value="@house.Id" />
                            <button type="submit">
                                <i class="material-icons">cancel</i>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="collapsible-body">
                    <div class="row">
                        <div class="col s6">
                            <p>
                                <i class="material-icons">location_on</i>
                                <span>@house.Address</span>
                            </p>
                            <p>
                                <i class="material-icons">location_city</i>
                                <span>
                                    <a href="~/map/@house.Id">
                                        @house.City, @house.PostalCode
                                    </a>
                                </span>
                            </p>
                        </div>
                        <div class="col s6">
                            <p>
                                @(house.HasBeach ? "Ranta" : "Ei rantaa")
                            </p>
                            <p>
                                @(house.HasElectricity ? "Sähkö" : "Ei sähköä")
                            </p>
                            <p>
                                @(house.HasRunningWater ? "Juokseva vesi" : "Ei juoksevaa vettä")
                            </p>
                            <p>
                                @(house.HasSauna ? "Sauna" : "Ei saunaa")
                            </p>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();
    });
</script>