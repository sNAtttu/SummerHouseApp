@model RegisterViewModel

<h2>Rekisteröidy</h2>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="All"></div>
    <div class="input-field">
        <label asp-for="Email" class="col m2 active"></label>
        <div class="col m10">
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="input-field">
        <label asp-for="Password" class="col m2 active"></label>
        <div class="col m10">
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="input-field">
        <label asp-for="ConfirmPassword" class="col m2 active"></label>
        <div class="col m10">
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="input-field">
        <div class="col offset-m2 m10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
