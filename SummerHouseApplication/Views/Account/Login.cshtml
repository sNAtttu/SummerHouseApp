@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<SummerHouseUser> SignInManager

<h2>Kirjaudu sisään</h2>
<div class="row">
    <section>
        <form asp-controller="Account"
              asp-action="Login"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              class="col m8"
              method="post">
            <div asp-validation-summary="All"></div>
            <div class="input-field">
                <label asp-for="Email" class="active"></label>
                <div class="col-md-10">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="input-field">
                <label asp-for="Password" class="active"></label>
                <div class="col-md-10">
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="input-field">
                <button class="btn blue" type="submit">Kirjaudu</button>
            </div>


            @*<p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>*@
        </form>
        <div class="col s12" style="margin-top:1em;">

            <a class="btn blue" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Rekisteröidy</a>

        </div>

    </section>

